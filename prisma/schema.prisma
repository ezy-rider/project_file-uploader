generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String @unique
  password String
}

model Session {
  id String @id
  sid String @unique
  data String
  expiresAt DateTime
}

model Folder {
  id Int @id @default(autoincrement())
  name String @unique
  files File[]
}

model File {
  id Int @id @default(autoincrement())
  name String
  path String
  folder Folder @relation(fields: [folderId], references: [id], onDelete: Cascade)
  folderId Int
}

